/* 客服钮的 */

.img-plus-style {
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  top: 40rpx;
  right: 25rpx;
  opacity: 0.7;
}

.zindex100 {
  z-index: 100;
}

.yc {
  opacity: 0;
}

.zan-panel {
  position: relative;
  background: #fff;
  margin-top: 10px;
  overflow: hidden;
}
.zan-cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
}

.zan-cell::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
  border-bottom-width: 1px;
  left: 15px;
  right: 0;
}

.zan-cell__bd {
  flex: 1;
}

.zan-cell__ft {
  position: relative;
  text-align: right;
  color: #666;
}
