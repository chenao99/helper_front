.model{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);/*蒙层的透明度可以自定义*/
  z-index: 9999999999;
}
.show{
  display: block;
}
.close{
  display: none;
}
/*下方可以自定义*/
.model-pack{
  width: 75%;
  margin: 0 auto;
  margin-top: 50%;
  background: #fff;
  border-radius: 8px;
  
}
.model-title{
  font-size: 1.2rem;
  text-align: center;
  padding: 0.3rem 0;
}
.model-content{
  font-size: 1rem;
  padding: 0 0.8rem;
  padding-bottom: 20rpx;
}
.model-button{
  font-size: 1.2rem;
  margin-top: 0.8rem;
  margin-bottom: 0.8rem;
  width: 100%;
  border-top: 1px solid #eee;
  border-radius: 0 0 8px 8px;
  overflow: hidden;
  text-align: center;
}
.model-button-cancel{
  float: left;
  color: rgb(228, 46, 46);
  width: 50%;
  height: 2.5rem;
  line-height: 2.5rem;
  box-sizing: border-box;
  border-right: 1px solid #eee;
}
.model-button-confirm{
  color: #009933;
  width: 50%;
  float: left;
  height: 2.5rem;
  line-height: 2.5rem;
}
.confirm{
  height: 2.5rem;
  line-height: 2.5rem;
  color: #009933;
}